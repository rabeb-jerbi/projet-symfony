<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}YOURCar - Premium Dealership{% endblock %}</title>

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/premium.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>
<header>
    <nav class="navbar-container">
        <!-- Logo -->
        <div class="logo">
            <a href="{{ path('app_home') }}" class="d-flex align-items-center gap-2">
                <i class="fas fa-car-side fs-4"></i>
                <span>YOUR</span>Car
            </a>
        </div>

        <!-- Menu Desktop -->
        <ul class="menu d-none d-lg-flex">
            <li><a href="{{ path('app_home') }}" class="{% if app.request.get('_route') == 'app_home' %}active{% endif %}">Accueil</a></li>
            <li><a href="{{ path('app_catalogue') }}" class="{% if app.request.get('_route') starts with 'app_catalogue' %}active{% endif %}">Véhicules</a></li>
            <li><a href="{{ path('app_home') }}#services">Services</a></li>
            <li><a href="{{ path('app_home') }}#contact">Contact</a></li>
        </ul>

        <!-- Auth Buttons / User Menu -->
        <div class="auth-section d-flex align-items-center gap-3">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <!-- Dropdown Profil Utilisateur -->
                <div class="dropdown">
                    <button class="btn-profile dropdown-toggle d-flex align-items-center gap-2"
                            type="button"
                            id="userDropdown"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                        <div class="avatar-circle bg-primary bg-opacity-25 text-white d-flex align-items-center justify-content-center">
                            <i class="fas fa-user"></i>
                        </div>
                        <span class="d-none d-md-inline text-white">{{ app.user.nom }}</span>
                    </button>

                    <ul class="dropdown-menu dropdown-menu-end glass-panel border-0 shadow-lg mt-2" aria-labelledby="userDropdown">
                        <li class="dropdown-header text-white border-bottom border-secondary pb-2 mb-2">
                            <div class="fw-bold">{{ app.user.nom }}</div>
                            <small class="text-muted">{{ app.user.email }}</small>
                        </li>

                        {% if is_granted('ROLE_ADMIN') %}
                            <li>
                                <a class="dropdown-item text-white" href="{{ path('admin_dashboard') }}">
                                    <i class="fas fa-shield-alt me-2 text-primary"></i> Dashboard Admin
                                </a>
                            </li>
                        {% endif %}

                        {% if is_granted('ROLE_CLIENT') %}
                            <li>
                                <a class="dropdown-item text-white" href="{{ path('client_profile') }}">
                                    <i class="fas fa-user-circle me-2 text-info"></i> Mon Profil
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item text-white" href="{{ path('client_orders') }}">
                                    <i class="fas fa-shopping-bag me-2 text-success"></i> Mes Commandes
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item text-white" href="{{ path('client_notifications') }}">
                                    <i class="fas fa-bell me-2 text-warning"></i> Notifications
                                </a>
                            li>

                        {% endif %}

                        <li><hr class="dropdown-divider border-secondary"></li>

                        <li>
                            <a class="dropdown-item text-danger" href="{{ path('app_logout') }}">
                                <i class="fas fa-sign-out-alt me-2"></i> Déconnexion
                            </a>
                        </li>
                    </ul>
                </div>
            {% else %}
                <!-- Visiteur Non Connecté -->
                <a href="{{ path('app_login') }}" class="btn btn-sm btn-outline-light rounded-pill px-3">
                    <i class="fas fa-sign-in-alt me-1"></i> Connexion
                </a>
                <a href="{{ path('app_register') }}" class="btn-premium py-2 px-4 shadow-sm">
                    <i class="fas fa-user-plus me-1"></i> Inscription
                </a>
            {% endif %}
        </div>

        <!-- Mobile Menu Toggle -->
        <button class="mobile-menu-toggle d-lg-none btn btn-outline-light"
                type="button"
                data-bs-toggle="offcanvas"
                data-bs-target="#mobileMenu">
            <i class="fas fa-bars fs-4"></i>
        </button>
    </nav>

    <!-- Offcanvas Mobile Menu -->
    <div class="offcanvas offcanvas-end glass-panel border-0" tabindex="-1" id="mobileMenu">
        <div class="offcanvas-header border-bottom border-secondary">
            <h5 class="offcanvas-title text-white"><span class="text-gradient">YOUR</span>Car</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>

        <div class="offcanvas-body">
            <ul class="nav flex-column gap-3">
                <li class="nav-item"><a class="nav-link text-white" href="{{ path('app_home') }}"><i class="fas fa-home me-2"></i> Accueil</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="{{ path('app_catalogue') }}"><i class="fas fa-car me-2"></i> Véhicules</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="{{ path('app_home') }}#services"><i class="fas fa-concierge-bell me-2"></i> Services</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="{{ path('app_home') }}#contact"><i class="fas fa-envelope me-2"></i> Contact</a></li>

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item mt-3 pt-3 border-top border-secondary">
                        <div class="text-muted small mb-2">MON COMPTE</div>

                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="nav-link text-white" href="{{ path('admin_dashboard') }}">
                                <i class="fas fa-shield-alt me-2"></i> Dashboard Admin
                            </a>
                        {% endif %}

                        {% if is_granted('ROLE_CLIENT') %}
                            <a class="nav-link text-white" href="{{ path('client_profile') }}">
                                <i class="fas fa-user me-2"></i> Mon Profil
                            </a>
                            <a class="nav-link text-white" href="{{ path('client_orders') }}">
                                <i class="fas fa-shopping-bag me-2"></i> Mes Commandes
                            </a>
                            <a class="nav-link text-white" href="{{ path('client_notifications') }}">
                                <i class="fas fa-bell me-2"></i> Notifications
                            </a>
                        {% endif %}
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-danger" href="{{ path('app_logout') }}">
                            <i class="fas fa-sign-out-alt me-2"></i> Déconnexion
                        </a>
                    </li>
                {% else %}
                    <li class="nav-item mt-3">
                        <a href="{{ path('app_login') }}" class="btn btn-outline-light w-100 mb-2">Connexion</a>
                        <a href="{{ path('app_register') }}" class="btn-premium w-100">Inscription</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</header>

<main class="position-relative">
    <div class="container-fluid p-0">

        <!-- Flash Messages -->
        <div class="flash-wrapper container position-fixed top-0 start-50 translate-middle-x"
             style="z-index: 2000; margin-top: 100px;">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success glass-panel text-white border-0 d-flex align-items-center gap-2">
                    <i class="fas fa-check-circle text-success"></i> {{ message }}
                    <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger glass-panel text-white border-0 d-flex align-items-center gap-2">
                    <i class="fas fa-exclamation-circle text-danger"></i> {{ message }}
                    <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        </div>

        {% block body %}{% endblock %}
    </div>
</main>

<footer>
    <div class="container">
        <div class="row g-4">
            <!-- Logo & Description -->
            <div class="col-lg-4 col-md-6">
                <div class="logo mb-3">
                    <span style="font-size: 1.5rem; font-weight: 800; background: var(--primary-gradient); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent;">YOUR</span>
                    <span class="text-white fw-bold fs-4">Car</span>
                </div>
                <p class="text-muted small mb-3">
                    L'excellence automobile à portée de main. Découvrez notre sélection exclusive de véhicules premium pour la vente et la location.
                </p>
                <div class="socials d-flex gap-3 mt-3">
                    <a href="#" class="social-icon" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social-icon" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="social-icon" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-icon" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>

            <!-- Liens Rapides -->
            <div class="col-lg-2 col-md-6">
                <h5 class="text-white mb-3 fw-bold">Navigation</h5>
                <ul class="list-unstyled footer-links">
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="{{ path('app_catalogue') }}">Catalogue</a></li>
                    <li><a href="{{ path('app_home') }}#services">Services</a></li>
                    <li><a href="{{ path('app_home') }}#contact">Contact</a></li>
                </ul>
            </div>

            <!-- Services -->
            <div class="col-lg-2 col-md-6">
                <h5 class="text-white mb-3 fw-bold">Services</h5>
                <ul class="list-unstyled footer-links">
                    <li><a href="#">Vente de Voitures</a></li>
                    <li><a href="#">Location</a></li>
                    <li><a href="#">Maintenance</a></li>
                    <li><a href="#">Assurance</a></li>
                </ul>
            </div>

            <!-- Informations -->
            <div class="col-lg-4 col-md-6">
                <h5 class="text-white mb-3 fw-bold">Contact</h5>
                <ul class="list-unstyled footer-contact">
                    <li class="mb-2"><i class="fas fa-map-marker-alt me-2 text-primary"></i> Les Berges du Lac, Tunis</li>
                    <li class="mb-2"><i class="fas fa-phone me-2 text-primary"></i> +216 25 000 000</li>
                    <li class="mb-2"><i class="fas fa-envelope me-2 text-primary"></i> contact@yourcar.tn</li>
                </ul>

                <!-- Newsletter (optionnel pour plus tard) -->
                <div class="mt-3">
                    <h6 class="text-white mb-2">Newsletter</h6>
                    <form class="d-flex gap-2">
                        <input type="email" class="form-control form-control-sm bg-transparent text-white border-secondary" placeholder="Votre email">
                        <button class="btn btn-sm btn-primary">OK</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Bottom Footer -->
        <div class="border-top border-secondary pt-4 mt-4">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <p class="mb-0 small text-muted">&copy; 2025 YOURCar. Tous droits réservés.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <ul class="list-inline mb-0 footer-legal">
                        <li class="list-inline-item"><a href="#" class="small text-muted">Mentions Légales</a></li>
                        <li class="list-inline-item"><a href="#" class="small text-muted">CGV</a></li>
                        <li class="list-inline-item"><a href="#" class="small text-muted">Confidentialité</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Mettez ici vos scripts JS globaux si besoin
</script>
{% block javascripts %}{% endblock %}
</body>
</html>
