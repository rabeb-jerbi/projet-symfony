                            <td>{{ commande.date|date('d/m/Y H:i') }}</td>
                            <td>{{ commande.client.nom }}</td>
                            <td>
                                <span class="badge {{ commande.type == 'achat' ? 'bg-success' : 'bg-info' }}">
                                    {{ commande.type|capitalize }}
                                </span>
                            </td>
                            <td>{{ commande.prixCmd }} DT</td>
                            <td>
                                <span class="badge bg-secondary">{{ commande.statut }}</span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_commande_show', {'id': commande.id}) }}" class="btn btn-outline-info">Voir</a>
                                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="btn btn-outline-warning">Ã‰diter</a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Aucune commande trouvÃ©e.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
