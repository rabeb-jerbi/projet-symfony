{% extends 'base.html.twig' %}

{% block title %}Mes Notifications{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-white mb-1">Notifications</h2>
            <small class="text-muted">{{ unreadCount }} non lues</small>
        </div>

        <form method="post" action="{{ path('client_notifications_mark_all') }}">
            <input type="hidden" name="_token" value="{{ csrf_token('client_notifs_mark_all') }}">
            <button class="btn btn-sm btn-outline-light">
                <i class="fas fa-check-double me-1"></i> Tout marquer comme lu
            </button>
        </form>
    </div>

    <div class="glass-panel p-3">
        {% if notifications is empty %}
            <div class="text-muted text-center py-4">Aucune notification</div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Titre</th>
                            <th>Contenu</th>
                            <th>Date</th>
                            <th>Ã‰tat</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for n in notifications %}
                        <tr>
                            <td>{{ n.id }}</td>
                            <td class="fw-bold">{{ n.title }}</td>
                            <td>{{ n.contenu }}</td>
                            <td>
                                {% if n.dateCreation %}
                                    {{ n.dateCreation|date('d/m/Y H:i') }}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>
                                {% if n.isRead %}
                                    <span class="badge bg-success">Lu</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">Non lu</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
