{% extends 'base.html.twig' %}

{% block title %}Connexion - YOURCar{% endblock %}

{% block body %}
    <div class="auth-page">
        <div class="container">
            <div class="row justify-content-center align-items-center min-vh-100 py-5">
                <div class="col-lg-5 col-md-7">
                    <div class="glass-panel p-5 auth-card">
                        <div class="text-center mb-4">
                            <div class="logo-auth mb-3">
                                <i class="fas fa-car-side fs-1 text-gradient"></i>
                            </div>
                            <h1 class="h3 text-white fw-bold mb-2">Connexion</h1>
                            <p class="text-muted small">Accédez à votre espace personnel</p>
                        </div>

                        {% if error %}
                            <div class="alert alert-danger border-0 rounded-3 mb-4" style="background: rgba(239, 68, 68, 0.1); border-left: 4px solid #ef4444 !important;">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <form method="post" class="auth-form">
                            <div class="mb-3">
                                <label for="inputEmail" class="form-label text-white small fw-semibold">
                                    <i class="fas fa-envelope me-2 text-primary"></i>Adresse email
                                </label>

                                {# IMPORTANT: name="email" #}
                                <input
                                    type="email"
                                    value="{{ last_username }}"
                                    name="email"
                                    id="inputEmail"
                                    class="form-control"
                                    placeholder="votre@email.com"
                                    autocomplete="email"
                                    required
                                    autofocus
                                >
                            </div>

                            <div class="mb-4">
                                <label for="inputPassword" class="form-label text-white small fw-semibold">
                                    <i class="fas fa-lock me-2 text-primary"></i>Mot de passe
                                </label>

                                <input
                                    type="password"
                                    name="password"
                                    id="inputPassword"
                                    class="form-control"
                                    placeholder="••••••••"
                                    autocomplete="current-password"
                                    required
                                >
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <button class="btn-premium w-100 py-3 fw-bold mb-3" type="submit">
                                <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                            </button>

                            <div class="text-center mb-3">
                                <a href="#" class="text-muted small text-decoration-none hover-primary">
                                    <i class="fas fa-key me-1"></i>Mot de passe oublié ?
                                </a>
                            </div>
                        </form>

                        <div class="auth-divider my-4">
                            <span class="text-muted small">OU</span>
                        </div>

                        <div class="text-center">
                            <p class="text-muted small mb-0">
                                Vous n'avez pas de compte ?
                                <a href="{{ path('app_register') }}" class="text-primary fw-semibold">Inscrivez-vous</a>
                            </p>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <small class="text-muted">
                            <i class="fas fa-shield-alt me-2 text-success"></i>
                            Connexion sécurisée SSL
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
