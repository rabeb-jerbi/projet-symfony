{% extends 'base.html.twig' %}

{% block title %}Inscription - YOURCar{% endblock %}

{% block body %}
    <div class="auth-page">
        <div class="container">
            <div class="row justify-content-center align-items-center min-vh-100 py-5">
                <div class="col-lg-5 col-md-7">
                    <div class="glass-panel p-5 auth-card">
                        <div class="text-center mb-4">
                            <div class="logo-auth mb-3">
                                <i class="fas fa-car-side fs-1 text-gradient"></i>
                            </div>
                            <h1 class="h3 text-white fw-bold mb-2">Créer un Compte</h1>
                            <p class="text-muted small">Rejoignez YOURCar et découvrez l'excellence automobile</p>
                        </div>

                        {{ form_start(registrationForm, {'attr': {'class': 'auth-form'}}) }}

                            {% if form_errors(registrationForm) %}
                                <div class="alert alert-danger py-2">
                                    {{ form_errors(registrationForm) }}
                                </div>
                            {% endif %}

                            <div class="mb-3">
                                <label class="form-label text-white small fw-semibold">
                                    <i class="fas fa-user me-2 text-primary"></i>Nom complet
                                </label>
                                {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nom complet'}}) }}
                                <div class="form-error">{{ form_errors(registrationForm.nom) }}</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-white small fw-semibold">
                                    <i class="fas fa-envelope me-2 text-primary"></i>Adresse email
                                </label>
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'votre@email.com'}}) }}
                                <div class="form-error">{{ form_errors(registrationForm.email) }}</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-white small fw-semibold">
                                    <i class="fas fa-map-marker-alt me-2 text-primary"></i>Adresse
                                </label>
                                {{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse complète'}}) }}
                                <div class="form-error">{{ form_errors(registrationForm.adresse) }}</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-white small fw-semibold">
                                    <i class="fas fa-phone me-2 text-primary"></i>Numéro de téléphone
                                </label>
                                {{ form_widget(registrationForm.numTeleph, {'attr': {'class': 'form-control', 'placeholder': '25 000 000'}}) }}
                                <div class="form-error">{{ form_errors(registrationForm.numTeleph) }}</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-white small fw-semibold">
                                    <i class="fas fa-lock me-2 text-primary"></i>Mot de passe
                                </label>
                                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': '••••••••'}}) }}
                                <small class="form-text text-muted">Au moins 6 caractères</small>
                                <div class="form-error">{{ form_errors(registrationForm.plainPassword.first) }}</div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label text-white small fw-semibold">
                                    <i class="fas fa-lock me-2 text-primary"></i>Confirmer le mot de passe
                                </label>
                                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': '••••••••'}}) }}
                                <div class="form-error">{{ form_errors(registrationForm.plainPassword.second) }}</div>
                            </div>

                            {{ form_rest(registrationForm) }}

                            <button type="submit" class="btn-premium w-100 py-3 fw-bold mb-3">
                                <i class="fas fa-user-plus me-2"></i>Créer mon compte
                            </button>

                        {{ form_end(registrationForm) }}

                        <div class="auth-divider my-4">
                            <span class="text-muted small">OU</span>
                        </div>

                        <div class="text-center">
                            <p class="text-muted small mb-0">
                                Vous avez déjà un compte ?
                                <a href="{{ path('app_login') }}" class="text-primary fw-semibold">Connectez-vous</a>
                            </p>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <small class="text-muted">
                            <i class="fas fa-shield-alt me-2 text-success"></i>
                            Vos données sont sécurisées et protégées
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
