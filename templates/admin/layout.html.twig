{# templates/admin/layout.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Dashboard Admin - YOURCar{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/premium.css') }}">

    {# ✅ FIX: dropdown select/options en dark mode #}
    <style>
        .admin-layout .form-select,
        .admin-layout select.form-control,
        .admin-layout select.form-control-dark {
            background-color: rgba(255,255,255,.06) !important;
            border: 1px solid rgba(255,255,255,.14) !important;
            color: #fff !important;
        }

        .admin-layout .form-select:focus,
        .admin-layout select.form-control:focus,
        .admin-layout select.form-control-dark:focus {
            border-color: rgba(140,85,255,.65) !important;
            box-shadow: 0 0 0 .20rem rgba(140,85,255,.18) !important;
        }

        .admin-layout select option {
            background-color: #0f1624 !important;
            color: #ffffff !important;
        }

        .admin-layout select option:checked,
        .admin-layout select option:hover {
            background-color: rgba(140,85,255,.35) !important;
            color: #fff !important;
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>

<body>
<div class="admin-layout">

    <aside class="admin-sidebar">
        <div class="sidebar-header">
            <div class="logo mb-4">
                <a href="{{ path('app_home') }}" class="text-decoration-none">
                    <i class="fas fa-car-side fs-4 me-2"></i>
                    <span class="text-gradient fs-5 fw-bold">YOUR</span><span class="text-white fs-5 fw-bold">Car</span>
                </a>
                <div class="text-muted small mt-1">Admin Panel</div>
            </div>
        </div>

        <nav class="sidebar-nav">
            <a href="{{ path('admin_dashboard') }}"
               class="nav-item {% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}">
                <i class="fas fa-chart-line"></i>
                <span>Dashboard</span>
            </a>

            <a href="{{ path('admin_voitures') }}"
               class="nav-item {% if app.request.get('_route') starts with 'admin_voiture' %}active{% endif %}">
                <i class="fas fa-car"></i>
                <span>Véhicules</span>
            </a>

            <a href="{{ path('admin_utilisateurs') }}"
               class="nav-item {% if app.request.get('_route') starts with 'admin_utilisateur' %}active{% endif %}">
                <i class="fas fa-users"></i>
                <span>Utilisateurs</span>
            </a>

            <a href="{{ path('admin_commandes') }}"
               class="nav-item {% if app.request.get('_route') starts with 'admin_commande' %}active{% endif %}">
                <i class="fas fa-shopping-cart"></i>
                <span>Commandes</span>
            </a>

            <a href="{{ path('app_paiement_index') }}"
               class="nav-item {% if app.request.get('_route') starts with 'app_paiement_' %}active{% endif %}">
                <i class="fas fa-credit-card"></i>
                <span>Paiements</span>
            </a>

            <a href="{{ path('app_avis_index') }}"
               class="nav-item {% if app.request.get('_route') starts with 'app_avis_' %}active{% endif %}">
                <i class="fas fa-star"></i>
                <span>Avis</span>
            </a>
            <a href="{{ path('admin_messages') }}"
                class="nav-item {% if app.request.get('_route') starts with 'admin_messages' %}active{% endif %}">
                <i class="fas fa-envelope"></i>
                <span>Messages</span>
                {% set unreadMsg = admin_unread_messages() %}
                {% if unreadMsg > 0 %}
                <span class="ms-auto badge rounded-pill bg-danger">{{ unreadMsg }}</span>
                {% endif %}
            </a>

            <a href="{{ path('admin_notifications') }}"
                class="nav-item {% if app.request.get('_route') starts with 'admin_notifications' %}active{% endif %}">
                <i class="fas fa-bell"></i>
                 <span>Notifications</span>
                {% set unreadNotifs = admin_unread_notifications() %}
                {% if unreadNotifs > 0 %}
                 <span class="ms-auto badge rounded-pill bg-warning text-dark">{{ unreadNotifs }}</span>
                {% endif %}
            </a>

            <div class="nav-divider"></div>

            <a href="{{ path('app_home') }}" class="nav-item">
                <i class="fas fa-globe"></i>
                <span>Voir le site</span>
            </a>

            <a href="{{ path('app_logout') }}" class="nav-item text-danger">
                <i class="fas fa-sign-out-alt"></i>
                <span>Déconnexion</span>
            </a>
        </nav>
    </aside>

    <main class="admin-content">
        <header class="admin-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h4 mb-0 text-white">{% block page_title %}Dashboard{% endblock %}</h1>

                    <nav aria-label="breadcrumb" class="mt-1">
                        <ol class="breadcrumb mb-0">
                            {% block breadcrumb %}
                                <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Admin</a></li>
                                <li class="breadcrumb-item active">Dashboard</li>
                            {% endblock %}
                        </ol>
                    </nav>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <div class="text-end">
                        <div class="text-white fw-bold">
                            {{ app.user ? app.user.nom : 'Admin' }}
                        </div>
                        <small class="text-muted">Administrateur</small>
                    </div>

                    <div class="avatar-circle bg-danger text-white d-flex align-items-center justify-content-center"
                         style="width:45px;height:45px;">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                </div>
            </div>
        </header>

        <div class="flash-wrapper container-fluid mt-3">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success glass-panel text-white border-0 d-flex align-items-center gap-2">
                    <i class="fas fa-check-circle text-success"></i> {{ message }}
                    <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger glass-panel text-white border-0 d-flex align-items-center gap-2">
                    <i class="fas fa-exclamation-circle text-danger"></i> {{ message }}
                    <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        </div>

        <div class="admin-page-content">
            {% block content %}{% endblock %}
        </div>
    </main>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
